# Maintainer: Jon Nordby <jononor@gmail.com>
# Note: this package actually follows latest git, as "releases" of jhbuild are
# not that useful

pkgname=jhbuild
pkgver=20110301
pkgrel=1
pkgdesc="Build tool for collection of source packages"
arch=('x86_64' 'i686')
url="http://live.gnome.org/Jhbuild"
license=('GPL')
groups=()
depends=('python2')
makedepends=('intltool' 'gnome-common' 'git')
install=
md5sums=() #generate with 'makepkg -g'

_gitroot="git://git.gnome.org/jhbuild"
_gitname="jhbuild"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  # BUILD
  export PYTHON=/usr/bin/python2
  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_gitname-build"

  make DESTDIR="$pkgdir/" install
  sed -i -e "s|#![ ]*/usr/bin/python$|#!/usr/bin/python2|" \
       -e "s|#![ ]*/usr/bin/env python$|#!/usr/bin/env python2|" \
  $(find $pkgdir -name '*.py') $pkgdir/usr/bin/jhbuild

}

# vim:set ts=2 sw=2 et:
