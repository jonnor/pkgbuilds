# Maintainer: Jon Nordby <jononor@gmail.com>

pkgname=dracut
pkgver=010
pkgrel=1
pkgdesc="Generic, modular, cross-distribution initramfs generation tool"
arch=('i686' 'x86_64')
url="https://dracut.wiki.kernel.org/"
license=('GPL')
depends=()
optdepends=('cryptsetup' 'lvm2')
makedepends=('docbook-xsl')
backup=('etc/dracut.conf')
install=
source=(http://www.kernel.org/pub/linux/utils/boot/dracut/dracut-$pkgver.tar.gz)
md5sums=('5ae0d1a67f3899cbc4f02eacfb71a6c4')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # BUILD
  make sysconfdir=/etc
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="${pkgdir}" sysconfdir=/etc install
} 

