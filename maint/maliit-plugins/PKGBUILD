# Maintainer: Jon Nordby <jononor@gmail.com>

pkgname=maliit-plugins
pkgver=0.80.1
pkgrel=1
pkgdesc="Maliit Input Methods - Plugins"
arch=('x86_64' 'i686')
url="http://maliit.org"
license=('LGPL')
depends=('qt' 'maliit-framework')
source=(https://gitorious.org/maliit/${pkgname}/archive-tarball/${pkgver})
md5sums=('c1916f1809948dd59b775201c973d079')

build() {
  cd "$srcdir/maliit-${pkgname}"

  # BUILD
  qmake -r . CONFIG+=notests
  make
}

package() {
  cd "$srcdir/maliit-${pkgname}"

  make install INSTALL_ROOT="$pkgdir/"
} 
