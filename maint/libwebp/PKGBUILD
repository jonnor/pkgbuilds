# Maintainer: Jon Nordby <jononor@gmail.com>

pkgname=libwebp
pkgver=0.1
pkgrel=1
pkgdesc="the WebP library. Includes conversion tools."
arch=('i686' 'x86_64')
url="http://code.google.com/intl/en/speed/webp/"
license=('BSD')
depends=('libpng' 'libjpeg')
makedepends=()
optdepends=()
conflicts=()
source=(http://webp.googlecode.com/files/$pkgname-$pkgver.tar.gz)
sha1sums=(e2f793940bc45b0df4ed57b902ce8b76be607134)

build() {
  cd "$srcdir/$pkgname"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
