# Maintainer: Jon Nordby <jononor@gmail.com>

_pkgname=dracut
pkgname=dracut-git
pkgver=20110110
pkgrel=1
pkgdesc="Generic, modular, cross-distribution initramfs generation tool"
arch=('i686' 'x86_64')
url="http://sourceforge.net/apps/trac/dracut/"
license=('GPL')
depends=()
makedepends=('git')
provides=($_pkgname)
conflicts=($_pkgname)
optdepends=('cryptsetup' 'lvm2')
makedepends=('libxslt')
install=
source=()
noextract=()
md5sums=()

_gitroot="git://dracut.git.sourceforge.net/gitroot/dracut/dracut"
_gitname="dracut"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  # BUILD
  make sysconfdir=/etc || return 1
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="${pkgdir}" sysconfdir=/etc install
} 

