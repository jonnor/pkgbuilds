post_install() {
  echo ">>> Remember to restart your gnome session."
  gconfpkg --install ooo-thumbnailer
  post_remove $1
}

pre_upgrade() {
  pre_remove $1
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  gconfpkg --uninstall ooo-thumbnailer
}

post_remove() {
  update-desktop-database -q
}
