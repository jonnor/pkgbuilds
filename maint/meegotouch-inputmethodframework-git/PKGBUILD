# Maintainer: Jon Nordby <jononor@gmail.com>

_pkgname=meegotouch-inputmethodframework
pkgname=$_pkgname-git
pkgver=20101220
pkgrel=2
pkgdesc="MeegoTouch Inputmethod Framework"
arch=('x86_64' 'i686')
url="http://wiki.meego.com/MeeGo_Touch_Framework"
license=('LGPL')
makedepends=('git')
depends=('qt' 'libmeegotouch' 'meegotouch-feedbackreactionmaps')
provides=($_pkgname)
conflicts=($_pkgname)
source=('0001-Disable-building-of-tests-and-applets-hacky.patch')
md5sums=('81edf06e506de63fc039cd257345ca3b')

_gitroot="git://gitorious.org/meegotouch/meegotouch-inputmethodframework.git"
_gitname="$_pkgname"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  patch -p1 < "$srcdir/0001-Disable-building-of-tests-and-applets-hacky.patch"

  # BUILD
  qmake
  make
  make install INSTALL_ROOT="$pkgdir/"

  # Workaround because install_prf does not show up in
  # src/Makefile like it should
  install -D -m 0644 src/meegoimframework.prf \
    $pkgdir/usr/share/qt/mkspecs/features/meegoimframework.prf
} 
