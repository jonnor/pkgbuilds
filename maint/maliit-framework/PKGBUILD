# Maintainer: Jon Nordby <jononor@gmail.com>

pkgname=maliit-framework
pkgver=0.80.3
pkgrel=1
pkgdesc="Maliit Input Methods - Framework"
arch=('x86_64' 'i686')
url="http://maliit.org"
license=('LGPL')
depends=('qt')
install=${pkgname}.install
source=(https://gitorious.org/maliit/${pkgname}/archive-tarball/${pkgver})
md5sums=('1379c5126daf63d13c8759c0afecfdd0')

build() {
  cd "$srcdir/maliit-${pkgname}"

  # BUILD
  qmake -r . CONFIG+=notests
  make
}

package() {
  cd "$srcdir/maliit-${pkgname}"

  make install INSTALL_ROOT="$pkgdir/"
} 
